<div class = "container">
	<h1 style="text-align:center">ADD A NEW T-SHIRT TO YOUR INVENTORY</h1>
		<p style='text-align:center'>All fields are not mandatory, but we strongly recommend adding as much detail as possible to make your t-shirt stand out for users.</p>
		<div class='jumbotron'>
		<%= render 'shared/errors', obj: @listing %>
			<div class = "row">
				<div class = "col-md-6 col-xs-12">
					<%= form_for @listing do |l| %>
						<%= l.label :name, 'Name (Maximum 75 Characters)' %><br />
						<%= l.text_field :name, class: "form-control" %><br />
						<%= l.label :category %><br />
  						<%= l.select :category_id, options_for_select(Category.all.map{|s|[s.name, s.id]}) %><br /><br />
						<%= l.label :subcategory, 'Subcategory' %><br />
  						<%= l.select :subcategory_id, options_for_select(Subcategory.all.map{|s|[s.name, s.id]}) %><br /><br />
						<%= l.label :gender, 'Target Consumer (only for Apparel and Accessories)' %><br />
						<%= l.radio_button :gender, 'men' %> 
  						<%= label :gender_men, 'Men' %><br />
  						<%= l.radio_button :gender, 'women' %>
  						<%= label :gender_women, 'Women' %><br />
						<%= l.radio_button :gender, 'both' %>
  						<%= label :gender_both, 'Both' %><br />
  				</div>		
  				<div class = "col-md-6 col-xs-12">
						<%= l.label :feature1, 'Feature1 (Maximum 150 characters)' %>
						<%= l.text_field :feature1, class: "form-control" %>
						<%= l.label :feature2, 'Feature2 (Maximum 150 characters)'%>
						<%= l.text_field :feature2, class: "form-control" %>
						<%= l.label :feature3, 'Feature3 (Maximum 150 characters)' %>
						<%= l.text_field :feature3, class: "form-control" %>
						<%= l.label :feature4, 'Feature4 (Maximum 150 characters)' %>
						<%= l.text_field :feature4, class: "form-control" %>
						<%= l.label :feature5, 'Feature5 (Maximum 150 characters)' %>
						<%= l.text_field :feature5, class: "form-control" %>
				</div>
			</div><br />
			<div class = "row">
					<div class = "col-md-6 col-xs-12">
						<%= l.label :price %><br />
						<%= l.text_field :price, class: "form-control" %><br />
						<%= l.label :cod, 'Cash on Delivery' %>
						<%= l.radio_button :cod, 'available' %> 
  						<%= label :cod_available, 'Available' %>
  						<%= l.radio_button :cod, 'not available' %> 
  						<%= label :cod_not_available, 'Not Available' %>
  						<%= l.radio_button :cod, 'contact seller' %> 
  						<%= label :cod_contact, 'Contact Seller' %><br /><br />
						<%= l.label :time, 'Delivery Time' %><br />
						<%= l.text_field :time, class: "form-control" %><br />
						<%= l.label :site, 'Link to product' %><br />
						<%= l.text_field :site, class: "form-control" %><br />
						<%= l.label :description, 'Detailed Description (Maximum 500 characters)' %>
						<%= l.text_area :description, class: "form-control" %><br /><br />
					</div>
					<div class = "col-md-6 col-xs-12">
						<%= l.label :image %>
						<%= l.file_field :image, class: "form-control"%><br />

						<%= l.label :image2 %>
						<%= l.file_field :image2, class: "form-control"%><br />
						
  						<%= l.label :image3 %>
						<%= l.file_field :image3, class: "form-control"%><br />
					
						<%= l.label :image4 %>
						<%= l.file_field :image4, class: "form-control"%><br />
					
	
					</div>	
				</div>
				</div>
						<%= l.submit 'UPDATE', class: 'btn btn-default btn-lg'  %>
						<%= link_to 'CANCEL', seller_path(current_seller), class: 'btn btn-default btn-lg' %>
					<% end %>

</div><br />