<nav class="navbar nav">
<div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
    </div>
      <div class = "row">
      <div class = "col-xs-6 col-md-12">
   
<div class="collapse navbar-collapse" id="myNavbar">
  
  <% if @subcategory.nerd %>
    <% Subcategory.all.where(:nerd => true).each do |sub| %>
    <div class="sub-headers">
      <li><%= link_to sub.name, sub if sub.nerd %></li><br />
    </div>
    <% end %>
    <% elsif @subcategory.motive %>
    <% Subcategory.all.where(:motive => true).each do |sub| %>
    <div class="sub-headers">
      <li><%= link_to sub.name, sub if sub.motive %></li><br />
    </div>
    <% end %>
     <% elsif @subcategory.free %>
    <% Subcategory.all.where(:free => true).each do |sub| %>
    <div class="sub-headers">
      <li><%= link_to sub.name, sub if sub.free %></li><br />
    </div>
    <% end %>
   <% elsif @subcategory.life %>
    <% Subcategory.all.where(:life => true).each do |sub| %>
    <div class="sub-headers">
      <li><%= link_to sub.name, sub if sub.life %></li><br />
    </div>
    <% end %>
   <% elsif @subcategory.intr %>
    <% Subcategory.all.where(:intr => true).each do |sub| %>
      <div class="sub-headers">
      <li><%= link_to sub.name, sub if sub.intr %></li><br />
    </div>
    <% end %>
  <% else %> 
    <%if @subcategory.other %>
      <% Subcategory.all.where(:other => true).each do |sub| %>
        <div class="sub-headers">
      <li><%= link_to sub.name, sub if sub.other %></li><br />
    </div>
      <% end %>
    <% end %>
  <% end %>
</div>
</div>
</div>
<% if @subcategory.gender1 || @subcategory.gender2 || @subcategory.gender3 %>
      <div class="col-md-12 text-center" id="consumer-type">
      <%= link_to @subcategory.gender1, men_path if @subcategory.gender1 %>
      <%= link_to @subcategory.gender2, women_path if @subcategory.gender2 %>
      <%= link_to @subcategory.gender3, both_path if @subcategory.gender3 %>
    </div>
<% end %>
        
  </div>
</nav>
<h2  class="product-list-header">NEW PRODUCTS</h2>
