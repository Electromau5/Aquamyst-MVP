<nav class="navbar navbar-default">
    <h1 style="text-align:center">ADMIN PANEL</h1>
  </nav>
<div class="container-fluid">
  <div class="jumbotron" style="background-color:#fff; border: 1px solid #000">
  
    <h2>Internal Content</h2>
      <h3 style="text-align:center">COLLECTIONS</h3>
        <table class="table table-striped table-bordered">
            <th class="center">Name</th>
            <th class="center">Meta Title</th>
            <th class="center">Meta Description</th>
            <th class="center">Meta Keywords</th>
            <th class="center">Admin Action</th>
          </tr>
        <thead>
        
        </thead>
          <tbody>
            <% Category.all.each do |c| %>
              <tr>
                <td><%= c.name %></td>
                <td><%= c.title %></td>
                <td><%= c.description %></td>
                <td><%= c.keywords %></td>
                <td>
                  <div class "update-delete"><%= link_to "Update",edit_category_path(c), class: "btn-update-delete-admin" %>
                  <%= link_to "Delete",c, method: :delete, data: {confirm: "Are you sure?"}, class: "btn-update-delete-admin" %>
              </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    <br>

<h3 style="text-align:center">TEES</h3>
<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Id</th>
    <th class="center">Image</th>
    <th class="center">Name / Meta-Title</th>
    <th class="center">Category</th>
    <th class="center">Meta Description</th>
    <th class="center">Brand</th>
    <th class="center">URL</th>
    <th class="center">Meta Keywords</th>
    <th class="center">Admin Action</th>
  </tr>
  <thead>
  </thead>

  <tbody>
    <% Listing.all.each do |l| %>
      <tr>
        <td><%= l.id %></td>
        <td><%= image_tag(l.image.url(:medium)) %></td>
        <td><%= l.name %></td>
        <td><%= l.category.name %></td>
        <td><%= l.description %></td>
        <td><%= link_to l.seller.name, l.seller, class: "btn-update-delete-admin" %></td>
        <td><%= link_to "#{l.name}",l, class: "btn-update-delete-admin" %></td>
        <td><%= l.tag %></td>
        <td>
          <%= link_to "Update",edit_listing_path(l), class: "btn-update-delete-admin" %>
          <%= link_to "Delete",l, method: :delete, data: {confirm: "Are you sure?"}, class: "btn-update-delete-admin" %>
       </td>
     </tr>
    <% end %>
  </tbody>
</table>
<br>
    <h3 style="text-align:center">Current Sellers</h3>
        <table class="table table-striped table-bordered">
          <tr>
            <th class="center">Id</th>
            <th class="center">Name / Meta Title</th>
