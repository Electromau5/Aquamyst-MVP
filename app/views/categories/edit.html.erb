<% noindex %>
<% nofollow %>
<div class = "container-fluid">
	<h1 style="text-align:center">CATEGORY DETAILS</h1>
		<%= render 'shared/errors', obj: @category %>
			<div class = "row">
				<div class = "col-md-6 col-md-offset-3">
					<%= form_for @category do |c| %>
						<%= c.label :name %><br />
						<%= c.text_field :name, class: "form-control" %><br />

						<%= c.label :title %><br />
						<%= c.text_field :title, class: "form-control" %><br />

						<%= c.label :description %><br />
						<%= c.text_field :description, class: "form-control" %><br />

						<%= c.label :keywords %><br />
						<%= c.text_field :keywords, class: "form-control" %><br />

						<%= c.submit 'Update', class: 'btn btn-primary btn-lg'  %>
						<%= link_to 'Cancel', category_path %>
					<% end %>
				</div>
			</div>
</div>
