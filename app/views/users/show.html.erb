<div class="container-fluid">
  <div class="jumbotron" style="border:1px solid grey;border-radius: 3px;background-color:#fff">
    <div class="row">
      <div class="col-md-3">
        <% if @user.avatar? %>
          <%= image_tag(@user.avatar(:medium), class: 'img-circle') %>
        <% else %>
          <div class="user-default"><%= image_tag('user.png') %></div>
        <% end %>
      </div>
      
        <div class="col-md-6">
          <div class="user-name">
            <h1><%= @user.name %></h1>
            <p style="font-family: 'Lato-Light', sans-serif"><%= @user.location %></p>
            <p style="font-family: 'Lato-Regular', sans-serif; font-size: 15px"><%= @user.description %></p>
          </div>
        </div>
    </div><br />
    <% if current_user == @user %>
      <%= link_to 'Add a new product', new_listing_path, class: "btn btn-default" %><br /><br />
    <% end %>
</div>
</div>
<div id="user-header">
	<div class="col-xs-6 col-md-6" style="text-align:center; border: 1px solid #fff; padding-top: 10px; padding-bottom: 10px; border-radius: 5px; background-color: #000 ">
		<div class="catalogue"><%= link_to 'MY BRANDS', show_follow_path(current_user) %></div>
	</div>
		<div class="col-xs-6 col-md-6" style="text-align:center; border: 1px solid #fff; padding-top: 10px; padding-bottom: 10px; border-radius: 5px; background-color: #000">
			<div class="catalogue"><%= link_to 'MY CATALOGUE', user_path(current_user) %></div>
		</div>
</div><br /><br />
<%= render 'listings/listing2', obj: @user_listings %>

